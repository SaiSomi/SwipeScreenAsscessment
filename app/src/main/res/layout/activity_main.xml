<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="413dp"
        android:layout_height="88dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager2"
        android:layout_width="413dp"
        android:layout_height="88dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewPager"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager3"
        android:layout_width="410dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewPager2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager4"
        android:layout_width="412dp"
        android:layout_height="83dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewPager3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager5"
        android:layout_width="412dp"
        android:layout_height="83dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewPager4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager6"
        android:layout_width="412dp"
        android:layout_height="83dp"
        app:layout_constraintTop_toBottomOf="@+id/ViewPager5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="68dp"
        android:background="#000000"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />


</androidx.constraintlayout.widget.ConstraintLayout>